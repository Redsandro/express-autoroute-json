{
  "env": {
      "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "func-names": 0,
    "new-cap": [2 , { "capIsNewExceptions": ["Q", "ObjectId"] }],
    "no-underscore-dangle": [2, { "allow": ["_id"] }],
    "no-var": 0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0,
    "prefer-template": 0,
    "space-before-function-paren": 0,
    "vars-on-top": 0,
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always",
      "exports": "always",
      "functions": "never"
    }]
  },
  "overrides": [{
    "files": ["test/**/*.js"],
    "env": {
      "mocha": true
    },
    "rules": {
      "func-names": [0],
      "import/no-extraneous-dependencies": [0],
      "new-cap": [2, {
        "capIsNewExceptions": ["Q", "ObjectId"]
      }],
      "no-underscore-dangle": [2, {
        "allow": ["_id"]
      }],
      "no-unused-expressions": [0],
      "prefer-arrow-callback": [0],
      "arrow-body-style": [0]
    },
    "globals": {
      "rootRequire": true,
      "rootPath": true
    }
  }]
}
